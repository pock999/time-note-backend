  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeArgs": [
        "-r",
        "esm"
      ],
      "env": {
        "NODE_ENV": "development"
      },
      "name": "Launch Program",
      "program": "${workspaceFolder}/bin/www",
    },
    {
      "name": "Run test via NPM",
      "request": "launch",
      "runtimeArgs": [
        "run-script",
        "test"
      ],
      "runtimeExecutable": "npm",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "pwa-node"
    },
  ]
}